{{#link-to 'question' question.id class="goQ"}}
  <div class="card">
    <div class="content">
      <p>
        {{question.content}}
      </p>
    </div>
    <div class="author">
      <p>
        # of answers: {{numberOfAnswers}}
      </p>
      <p>
        {{on-fire question}}
      </p>
      <p class="author">
        {{question.questionAuthor}}
      </p>
    </div>
  </div>
{{/link-to}}
